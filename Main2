import cv2
import numpy as np

def adjust_gamma(image, gamma=1.0):
    invGamma = 1.0 / gamma
    table = np.array([((i / 255.0) ** invGamma) * 255 for i in np.arange(0, 256)]).astype("uint8")
    return cv2.LUT(image, table)

# Load your image (replace 'your_image.jpg' with the actual image path)
image = cv2.imread('your_image.jpg')

# Darken the image (adjust gamma value as needed)
darker_image = adjust_gamma(image, gamma=0.7)  # Lower gamma value makes it darker

# Save or display the modified image
cv2.imwrite('darker_image.jpg', darker_image)
